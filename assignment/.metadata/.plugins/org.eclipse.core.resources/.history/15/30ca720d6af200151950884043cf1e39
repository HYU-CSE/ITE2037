package toys;

import java.util.Random;

public class ToyFactory {
	public static Toy MakeOne() 
	{
		Toy toy = new Toy();
		Random rand = new Random();
		if (rand.nextInt(10) < 3)
		{
			switch (rand.nextInt(3))
			{
			case 0:
				toy.numberOfArms += rand.nextInt(5) - 2;
				if (toy.numberOfArms < 0)
					toy.numberOfArms = 0;
				break;
			case 1:
				toy.numberOfHeads += rand.nextInt(5) - 2;
				if (toy.numberOfHeads < 0)
					toy.numberOfHeads = 0;
				break;
			case 2:
				toy.numberOfLegs+= rand.nextInt(5) - 2;
				if (toy.numberOfLegs < 0)
					toy.numberOfLegs = 0;
				break;
			}
		}
		return toy;
	}
}
